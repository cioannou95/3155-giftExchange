<!DOCTYPE html>
<html>
  <head>
    <title>GiftExchange</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if current_user %>
      Signed in as <strong><%= current_user.name %></strong>!
      <%= button_to "Sign out", signout_path, id: "sign_out", :method => "get" %>
      <% else %>
        <%= button_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", :method => "get" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
