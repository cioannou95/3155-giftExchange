<p>
    <strong>Room code:</strong>
    <%= @room.roomcode %>
    
</p>


<p>
    <strong>Room Password:</strong>
    <%= @room.roompassword %>
</p>

<h2>Users</h2>
<% @room.users.each do |user| %>
    <p>
        <strong>First Name:</strong>    
        <%= user.fname %>
    </p>
    
    <p>
        <strong>Last Name:</strong>
        <%= user.lname %>
    </p>

<% end %>

<h2>Add a User:</h2>
<%= form_for([@room, @room.users.build]) do |f| %>
    <p>
        <%= f.label :fname %><br>
        <%= f.text_area :fname %>
    </p>
    
    <p>
        <%= f.label :lname %><br>
        <%= f.text_area :lname %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>